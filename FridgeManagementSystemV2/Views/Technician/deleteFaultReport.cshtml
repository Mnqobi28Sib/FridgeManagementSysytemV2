@model FridgeManagementSystemV2.Models.FaultReport

@{
    ViewData["Title"] = "Delete Fault Report";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this fault report?</h3>
<div>
    <h4>Report Description: @Model.ReportDesc</h4>
    <p>Fridge Model: @Model.Fridge.ModelNumber</p>
    <p>Customer: @Model.Fridge.Customer.CustomerName @Model.Fridge.Customer.Surname</p>
</div>

<form asp-action="DeleteFaultReportConfirmed" method="post">
    <input type="hidden" asp-for="ReportId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ViewFaultReports" class="btn btn-secondary">Cancel</a>
</form>
