@model FridgeManagementSystemV2.Models.FaultReport

@{
    ViewData["Title"] = "Create Fault Report";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="CreateFaultReport" method="post">
    <div class="form-group">
        <label asp-for="FridgeId"></label>
        <select asp-for="FridgeId" class="form-control" asp-items="@(new SelectList(ViewBag.Fridges, "FridgeId", "ModelNumber"))"></select>
    </div>

    <div class="form-group">
        <label asp-for="ReportDesc"></label>
        <input asp-for="ReportDesc" class="form-control" />
        <span asp-validation-for="ReportDesc" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="ViewFaultReports" class="btn btn-secondary">Cancel</a>
</form>
